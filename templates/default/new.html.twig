{% extends "base.html.twig" %}

{# templates/default/new.html.twig #}
{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">SAPI 3 Credentials</h3>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    {{ form_label(form.endpoint) }}
                    {{ form_errors(form.endpoint) }}
                    {{ form_widget(form.endpoint) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.key) }}
                    {{ form_errors(form.key) }}
                    {{ form_widget(form.key) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.next) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock content %}